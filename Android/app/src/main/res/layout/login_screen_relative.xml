<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="355dp"
                android:layout_height="561dp"
                android:layout_marginLeft="8pt">

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="90pt"
        android:layout_height="90pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <EditText
        android:id="@+id/text_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/image_login"
        android:layout_marginTop="208dp"
        android:hint="Enter e-mail"/>


    <View
        android:id="@+id/view_L1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignBottom="@+id/text_login_email"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="386dp"
        android:background="#B3B3B3"
        android:padding="100dp"/>

    <EditText
        android:id="@+id/text_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_login_email"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"/>

    <View
        android:id="@+id/view_L2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignBottom="@+id/text_login_password"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#B3B3B3"
        android:padding="10dp"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/image_login"
        android:layout_below="@+id/text_login_password"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="SIGN IN"/>


</RelativeLayout>