<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="355dp"
                android:layout_height="561dp"
                android:layout_marginLeft="8pt">

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="90pt"
        android:layout_height="90pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/text_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_login"
        android:layout_centerHorizontal="true"
        android:text="Welcome!"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/text_login_name"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        android:hint="Enter Name"/>

    <EditText
        android:id="@+id/text_login_password"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="388dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="386dp"
        android:background="#B3B3B3"
        android:padding="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="426dp"
        android:background="#B3B3B3"
        android:padding="10dp"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/image_login"
        android:layout_below="@+id/text_login_password"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="SIGN IN"/>


</RelativeLayout>