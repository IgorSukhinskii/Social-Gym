<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="S"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8pt"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="348dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <TextView
            android:text="Summer cross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"
            android:layout_weight="0.21"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:text="Type of sport: Running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_weight="0.06"
            android:gravity="center_vertical"/>

        <TextView
            android:text="Address: Honkakatu 7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"/>

        <TextView
            android:text="Data: 15/08/2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"/>

        <TextView
            android:text="Time: from 14.00 to 16.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"/>

        <TextView
            android:text="Ends: 16-00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"/>

        <TextView
            android:text="Comments: Wait for you at the most fun sport event of this summer! Take friends and good mood with you!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="18sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"/>

        <Button
            android:text="back to list of events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="0.08"
            android:backgroundTint="@color/cardview_shadow_start_color" />

    </LinearLayout>
</LinearLayout>
