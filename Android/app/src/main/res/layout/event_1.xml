<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="561dp"
        android:layout_marginLeft="8pt">

        <TextView
            android:id="@+id/event_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:layout_weight="0.21"
            android:gravity="center"
            android:text="Summer cross"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="85dp"/>


        <TextView
            android:id="@+id/event_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="14.00-16.00"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_toEndOf="@+id/event_type"
            android:text="Honkakatu 7"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/icon_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView5"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_calendar"
            android:layout_toEndOf="@+id/icon_calendar"
            android:text="15/08/2017"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/event_icon_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/event_address"
            android:layout_toStartOf="@+id/event_address"
            app:srcCompat="@drawable/ic_navi"/>

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_head"
            android:layout_centerHorizontal="true"
            android:text="Running"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_image"
            android:layout_marginTop="170dp"
            android:paddingTop="10dp"
            android:text="Wait for you at the most fun sport event of this summer! Take friends and good mood with you!"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
