<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


android:layout_width="match_parent"
android:layout_height="match_parent">


<Button
    android:text="Add Event"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="27dp"
    android:layout_marginBottom="36dp" />

<TextView
    android:text="Time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView4"
    android:layout_marginTop="39dp"
    android:layout_below="@+id/datePicker"
    android:layout_alignStart="@+id/textView3" />

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/button"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="11dp"
    android:baselineAligned="false"
    android:id="@+id/textInputLayout2">

</android.support.design.widget.TextInputLayout>

<DatePicker
    android:layout_width="90dp"
    android:layout_height="30dp"
    android:id="@+id/datePicker"
    android:layout_alignBottom="@+id/textView3"
    android:layout_alignStart="@+id/numberPicker" />

<TimePicker
    android:layout_width="90dp"
    android:layout_height="30dp"
    android:id="@+id/timePicker"
    android:layout_alignTop="@+id/textView4"
    android:layout_toEndOf="@+id/editText2" />

<NumberPicker
    android:layout_width="90dp"
    android:layout_height="30dp"
    android:id="@+id/numberPicker"
    android:layout_centerVertical="true"
    android:layout_alignStart="@+id/timePicker" />

<EditText
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:hint="Type comments"
    android:id="@+id/editText2"
    android:layout_alignBottom="@+id/textInputLayout2"
    android:layout_alignStart="@+id/textView6" />

<ExpandableListView
    android:layout_width="90dp"
    android:layout_height="30dp"
    android:id="@+id/expandableListView"
    android:layout_marginEnd="14dp"
    android:layout_above="@+id/textInputLayout"
    android:layout_alignEnd="@+id/datePicker" />

<TextView
    android:text="Date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:id="@+id/textView3"
    android:layout_below="@+id/textInputLayout"
    android:layout_alignStart="@+id/textView2" />

<TextView
    android:text="Team Members"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView5"
    android:layout_marginStart="35dp"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true" />

<TextView
    android:text="Comments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView6"
    android:layout_marginBottom="24dp"
    android:layout_above="@+id/editText2"
    android:layout_alignStart="@+id/textView5" />

<TextView
    android:text="Type of Sports"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="31dp"
    android:id="@+id/textView"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/textView5" />

<TextView
    android:text="Place"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    android:layout_marginBottom="16dp"
    android:layout_above="@+id/datePicker"
    android:layout_alignStart="@+id/textView" />

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textInputLayout"
    android:layout_below="@+id/textView"
    android:layout_alignStart="@+id/expandableListView">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type the place"
        android:id="@+id/editText" />
</android.support.design.widget.TextInputLayout>


</RelativeLayout>